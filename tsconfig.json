{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": [
    "src",
    "types"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  }
}